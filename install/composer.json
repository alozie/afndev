{
  "name": "project-template/installer",
  "description": "Installer file for the Acquia PS project template",
  "homepage": "https://github.com/acquia/project-template",
  "authors": [
    {
      "name": "Matthew Grasmick",
      "email": "matthew.grasmick@acquia.com",
      "homepage": "http://grasmash.com"
    }
  ],
  "require": {
    "php":                ">=5.3.0",
    "guzzlehttp/guzzle":  "~5.0",
    "symfony/console":    "~2.0",
    "symfony/filesystem": "~2.0",
    "symfony/yaml":       "2.8.*@dev",
    "knplabs/github-api": "1.3.*@dev",
    "symfony/process":    "2.5.*@dev",
    "drush/drush":        "7.*"
  },
  "autoload": {
    "psr-0": {
      "ProjectTemplate\\Installer": "src/"
    }
  },
  "config": {
    "bin-dir": "bin"
  },
  "bin": ["bin/project-template-installer.php", "bin/project-template-installer"]
}
