<!-- This defines generic, reusable file sets that are used by other targets -->
<project name="filesets" default="build">
  <fileset dir="${repo.root}" id="php.files">
    <include name="**/*.inc"/>
    <include name="**/*.php"/>
    <include name="**/*.module"/>
    <include name="**/*.install"/>
    <include name="**/*.profile"/>
    <include name="**/*.test"/>
    <include name="**/*.theme"/>
    <exclude name="vendor/**/*"/>
  </fileset>

  <fileset dir="${repo.root}" id="custom.files" expandsymboliclinks="true">
    <include name="modules/custom/**"/>
    <include name="modules/features/**"/>
  </fileset>

  <fileset dir="${repo.root}" id="tests.files" expandsymboliclinks="true">
    <include name="tests/**/*.php" />
  </fileset>

  <fileset dir="${repo.root}" id="custom.themes">
    <include name="themes/custom/**"/>
  </fileset>
</project>
