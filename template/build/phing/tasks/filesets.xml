<!-- This defines generic, reusable file sets that are used by other targets -->
<project name="filesets" default="build">
  <fileset dir="${repo.root}" id="php.files">
    <include name="**/*.inc"/>
    <include name="**/*.php"/>
    <include name="**/*.module"/>
    <include name="**/*.install"/>
    <include name="**/*.profile"/>
    <include name="**/*.test"/>
    <include name="**/*.theme"/>
    <exclude name="vendor/**/*"/>
  </fileset>

  <fileset dir="${repo.root}" id="custom.files" expandsymboliclinks="true">
    <include name="sites/all/modules/custom/**"/>
    <include name="sites/all/modules/features/**"/>
    <include name="sites/default/settings/**"/>
    <exclude name="**/*.box.*"/>
    <exclude name="**/*.context.*"/>
    <exclude name="**/*.facetapi_defaults.*"/>
    <exclude name="**/*.features.*"/>
    <exclude name="**/*.field_group.*"/>
    <exclude name="**/*.pages_default.*"/>
    <exclude name="**/*.services.*"/>
    <exclude name="**/*.strongarm.*"/>
    <exclude name="**/*.views.*"/>
    <exclude name="**/*.views_default.*"/>
  </fileset>

  <fileset dir="${repo.root}" id="tests.files" expandsymboliclinks="true">
    <include name="tests/**/*.php" />
  </fileset>

  <fileset dir="${repo.root}" id="custom.themes">
    <include name="sites/all/themes/custom/**"/>
  </fileset>
</project>
