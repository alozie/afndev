<!-- This defines generic, reusable file sets that are used by other targets -->
<project name="filesets" default="build">
  <patternset id="files.php">
    <include name="**/*.inc"/>
    <include name="**/*.php"/>
    <include name="**/*.module"/>
    <include name="**/*.install"/>
    <include name="**/*.profile"/>
    <include name="**/*.test"/>
    <include name="**/*.theme"/>
  </patternset>

  <fileset dir="${repo.root}" id="files.php.all">
    <patternset refid="files.php"/>
    <exclude name="**/vendor/**/*"/>
  </fileset>

  <fileset dir="${repo.root}/modules/custom" id="files.php.custom" expandsymboliclinks="true">
    <patternset refid="files.php"/>
  </fileset>

  <fileset dir="${repo.root}" id="files.tests" expandsymboliclinks="true">
    <include name="tests/**/*.php" />
    <exclude name="**/vendor/**/*"/>
  </fileset>

  <fileset dir="${repo.root}" id="custom.themes">
    <include name="themes/custom/**"/>
  </fileset>
</project>
