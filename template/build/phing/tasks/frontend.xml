<project name="frontend" default="install">
  <target name="frontend:build"
          depends="frontend:install">
    <if>
      <not>
        <equals arg1="${project.theme_name}" arg2="thunder" />
      </not>
      <then>
        <exec dir="${repo.root}/themes/custom/${project.theme_name}" command="npm test" logoutput="true" checkreturn="true" />
      </then>
    </if>
  </target>
  <target name="frontend:install" description="Uses gulp to build front end dependencies.">
    <if>
      <not>
        <equals arg1="${project.theme_name}" arg2="thunder" />
      </not>
      <then>
        <exec dir="${repo.root}/themes/custom/${project.theme_name}" command="npm install" logoutput="true" checkreturn="true" />
        <exec dir="${repo.root}/themes/custom/${project.theme_name}" command="npm rebuild node-sass" logoutput="true" checkreturn="true" />
        <exec dir="${repo.root}/themes/custom/${project.theme_name}" command="bower install" logoutput="true" checkreturn="true" />
      </then>
    </if>
  </target>
</project>
