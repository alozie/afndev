<project name="frontend" default="install">
  <target name="frontend:build" description="Builds frontend assets for Thunder theme."
          depends="frontend:install">
    <if>
      <not>
        <equals arg1="${project.theme_name}" arg2="thunder" />
      </not>
      <then>
        <exec dir="${repo.root}/docroot/themes/custom/${project.theme_name}" command="npm run build" logoutput="true" checkreturn="true" />
      </then>
    </if>
  </target>
  <target name="frontend:install" description="Installs dependencies for Thunder theme.">
    <if>
      <not>
        <equals arg1="${project.theme_name}" arg2="thunder" />
      </not>
      <then>
        <exec dir="${repo.root}/docroot/themes/custom/${project.theme_name}" command="npm run install-${project.theme_name}" logoutput="true" checkreturn="true" />
      </then>
    </if>
  </target>
</project>
