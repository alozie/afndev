<project name="properties" default="build">

  <!-- Define the repo root as a property, and resolve to an absolute file path -->
  <property name="repo.root.relative" value="${project.basedir}/../.."/>
  <resolvepath propertyName="repo.root" file="${repo.root.relative}"/>

  <!-- Load the root config.yml file for this project. -->
  <property file="${repo.root}/project.yml" override="true"/>

  <!-- Load the environment-specific config.yml file for this project. -->
  <property file="${project.basedir}/build.yml" override="true"/>
  <resolvepath propertyName="pt.new.dir" file="${pt.new.dir}"/>

</project>
